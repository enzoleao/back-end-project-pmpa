generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Polices {
  id    String     @id @default(uuid())
  rg String  @unique
  name  String?
  battalionId String @unique @map("battalion_id")

  user    Battalions    @relation(fields: [battalionId], references: [id])
}

model Coint {
  id        String     @id @default(uuid())
  name String
  battalions Battalions[]
}

model Battalions {
  id String @id @default(uuid())
  name String 
  cointId String @unique @map("coint_id")
  effective Polices[]

  coint    Coint    @relation(fields: [cointId], references: [id])
}